{
  "name": "compoundchat",
  "version": "0.1.0",
  "description": "WhatsApp bot for Compound DeFi - Bringing lending and borrowing to 2+ billion messaging users",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:e2e": "jest --testMatch='**/tests/e2e/**/*.test.ts'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "node -r tsx/register src/database/migrate.ts",
    "migrate:create": "node -r tsx/register src/database/create-migration.ts",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit && snyk test",
    "prepare": "husky install"
  },
  "keywords": [
    "compound",
    "defi",
    "whatsapp",
    "crypto",
    "africa",
    "mobile-money",
    "ethereum",
    "lending"
  ],
  "author": "CompoundChat Team (Beacher, Bunny, Wisdom)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/compoundchat/compoundchat"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "ethers": "^6.13.0",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "redis": "^4.6.15",
    "winston": "^3.13.0",
    "joi": "^17.13.3",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "bip39": "^3.1.0",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.3.1",
    "snarkjs": "^0.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "tsx": "^4.15.6",
    "typescript": "^5.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "snyk": "^1.1292.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

